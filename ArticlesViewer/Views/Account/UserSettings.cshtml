@model UserUpdateResponse

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <label asp-for=UserName class="form-label">Change your name.</label>
            <input class="form-control mb-2" asp-for=UserName>

            <label asp-for=Image class="form-label">Upload your avatar (.jpeg).</label>
            <input class="form-control mb-2" asp-for=Image>

            <span class="text-success">@ViewBag.Result</span>
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
        <div class="col-3"></div>
    </div>
</form>