@model LogInCommand

@{
    ViewBag.Title = "Login account";
}
<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <h1 class="text-center">Log in:</h1>
        <form method="post" id="create-form" class="needs-validation fs-6">
            <div class="mb-3">
                <label asp-for=Email></label><br>
                <input asp-for=Email class="form-control">
                <span asp-validation-for=Email class="text-danger"></span>
            </div>
            <div class="mb-3 mt-3">
                <label asp-for=Password></label><br>
                <input asp-for=Password class="form-control">
            </div>
            <div class="mb-3 mt-3">
                <label class="form-check-label" asp-for=RememberMe></label>
                <input class="form-check-input" asp-for=RememberMe>
            </div>
            <div class="mb3 bg-danger rounded text-white" asp-validation-summary="All">
            </div>
            <a asp-controller="Account" asp-action="Register">Do not have an account</a>
            <div class="mb-3 mt-3" style="display: flex; justify-content: center">
                <button type="submit" id="button-form" class="btn btn-lg btn-success mb-3">Log in</button>
            </div>
        </form>
    </div>
    <div class="col-3"></div>
</div>
