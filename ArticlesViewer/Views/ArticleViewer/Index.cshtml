@model IEnumerable<ArticleResponse>

@{
    ViewBag.Title = "Update Artice";
    ViewBag.TopicTags = Enum.GetNames(typeof(TopicTags))
        .Select(tag => new SelectListItem() { Text = tag, Value = tag });
    object context = ViewBag.FilterContext;
}

<div class="row">
    <div class="col-sm-4 col-md-3">
        @await Html.PartialAsync("~/Views/Shared/_ArticleFilter.cshtml", context)
    </div>
    <div class="row col-sm-8 col-md-9 g-2">
        @foreach (var article in Model)
        {
            <div class="col-12 col-sm-12 col-md-6 col-lg-4">
                <div class="card p-0 h-100">
                    <div style="height: 200px; overflow: hidden;">
                        <img src="~/ArticleViewer/ArticleImage?id=@article.Id" class="card-img-top img-fluid h-100 w-100" style="object-fit: cover;" alt="top-image">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@article.Title</h5>
                        <p class="card-text">@article.TopicTag</p>
                        <p class="card-text">@article.Description</p>

                        <div class="w-100">
                            <a asp-controller="ArticleViewer" asp-action="ViewArticle" asp-route-id="@article.Id" class="btn btn-primary w-100">Read</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>